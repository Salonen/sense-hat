{
  "name": "sense-hat",
  "version": "0.1.0",
  "description": "Control the Sense HAT add-on for the Raspberry Pi, in JavaScript!",
  "main": "lib/sense-hat.js",
  "scripts": {
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "flowStop": "flow stop",
    "lint": "eslint src/sense-hat.js",
    "compile": "rm -rf ./lib && mkdir lib && babel -o lib/sense-hat.js src/sense-hat.js && babel --no-babelrc --plugins transform-flow-strip-types -o lib/sense-hat_es6.js src/sense-hat.js && cp src/sense-hat.js lib/sense-hat_es6_flow.js",
    "docs": "coffee tools/extractDocs.coffee",
    "build": "npm run lint && npm run flow && npm run compile && npm run docs"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-eslint": "^5.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.7.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "chalk": "^1.1.3",
    "coffee-script": "1.10.0",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-flowtype": "^2.2.2",
    "flow-bin": "^0.22.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guigrpa/sense-hat.git"
  },
  "keywords": [
    "raspberry",
    "pi",
    "sense",
    "HAT",
    "gpio",
    "leds",
    "matrix",
    "accelerometer",
    "gyroscope",
    "sensors",
    "humidity",
    "temperature"
  ],
  "author": "Guillermo Grau Panea",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guigrpa/sense-hat/issues"
  },
  "homepage": "https://github.com/guigrpa/sense-hat#readme"
}
